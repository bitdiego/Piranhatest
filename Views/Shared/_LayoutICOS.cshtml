    <script type="text/javascript">
        $(function () {
            // Add tooltip
            $('.tooltipEl').tooltip({
                delay: 500,
                placement: "right",
                title: userDetails,
                html: true
            });
        });

        // Get user details for tooltip
        function userDetails() {
            var id = this.id;
            //   var split_id = id.split('_');
            //   var userid = split_id[1];

            var tooltipText = "no";
            var t2aooltipText = "aa";
            let t2ooltipText = t2aooltipText.concat(id);
            $.ajax({
                url: '../../api/UIFacilities/gettooltip',
                type: 'get',
                async: false,
                data: { varname: id },
                success: function (response) {
                    tooltipText = response;
                }
            });
            return tooltipText;
        }
